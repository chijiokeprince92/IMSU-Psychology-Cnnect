<br>
{{#if message}}
    <p class="alert alert-success">{{message}}</p>
{{/if}}
<h5><b>
        {{newspaper.heading}}
    </b></h5>
<br><br>
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-lg-6">
            <img src="/{{newspaper.picture}}" alt="image" class="rounded" width="100%" />
        </div>
        <br>
        <div class="col-12 col-lg-6">
            <p>{{newspaper.passage}}</p>
        </div>
        <div class="col-12">
            <br>
            <p>{{newspaper.passage1}}</p>
            <br>
            <p>{{newspaper.passage2}}</p>
        </div>
    </div>
</div>
<br><br>
<h5><b>
        COMMENTS
    </b>
</h5>
<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-4">
            {{#each comments}}
                <p class="card"><b>{{this.user}}: </b>{{this.comment}}</p>
                <br><br>
            {{/each}}
            <br>
        </div>
    </div>
</div>
<br>