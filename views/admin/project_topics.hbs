<h5><b>
    PROJECT TOPICS
  </b></h5>
{{#if message}}
  <p class="alert alert-success">{{message}}</p>
{{/if}}
<div class="container-fluid">
  <div class="row">
    <div class="col-12 dropdown dropright">
      <button class="btn btn-secondary btn-sm dropdown" data-toggle="dropdown"><span class="fa fa-search"></span>
        search topics</button>
      <div class="dropdown-menu dropdown-menu-right">
        <a class="dropdown-item" href="#">AMNESIA</a>
        <a class="dropdown-item" href="/admin/getprojectcategory">ANXIETY</a>
        <a class="dropdown-item" href="#">DEMENTIA</a>
        <a class="dropdown-item" href="#">DEPRESSION</a>
        <a class="dropdown-item" href="#">DEVELOPMENTAL PSYCHOLOGY</a>
        <a class="dropdown-item" href="#">EDUCATIONAL PERFORMANCE</a>
        <a class="dropdown-item" href="#">ENVIRONMENT</a>
        <a class="dropdown-item" href="#">LOCUS OF CONTROL</a>
        <a class="dropdown-item" href="#">PHYSICAL PERFORMANCE</a>
        <a class="dropdown-item" href="#">PSYCHOACTIVE DRUGS</a>
        <a class="dropdown-item" href="#">PSYCHO THERAPY</a>
        <a class="dropdown-item" href="#">PSYCHOPATHOLOGY</a>
        <a class="dropdown-item" href="#">PERSONALITY</a>
        <a class="dropdown-item" href="#">PSYCHOSIS</a>
        <a class="dropdown-item" href="#">SCHIZOPHRENIA</a>
        <a class="dropdown-item" href="#">SCHOOL OF THOUGHT</a>
      </div>
    </div>
  </div>
</div>
<br><br>
<ol>
  {{#each projectss}}
    <li class="container-fluid">
      <div class="row">
        <div class="col-12">
          <p><a href="/{{this.project}}">{{this.topic}}</a></p>
          <br>
        </div>
        <br><br>
        <div class="col-12 col-lg-8">
          <p>{{this.description}}</p>
        </div>
      </div>
      <a class="btn btn-info" href="/admin/editproject/{{this.id}}"><span class="fa fa-edit"></span></a>
      <form action="/deleteproject/{{this.id}}" method="POST" style="display:inline">
        <input type="hidden" class="form-control">
        <button type="submit" class="btn btn-danger"><span class="fa fa-trash"></span></button>
      </form>
    </li>
    <br><br>
  {{else}}
    <p>PROJECTS ARE NOT AVAILABLE NOW...</p>
  {{/each}}
</ol>
<br><br>