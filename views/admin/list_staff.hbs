<br>
<h5><b>
    PSYCHOLOGY LECTURERS
  </b></h5>
<br><br>
<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-9">
      <ul class="list-group list-group-flush">
        {{#each slow}}
          <li class="container-fluid list-group-item">
            <div class="row">
              {{#if this.photo.url}}
                <div class="col-4 col-sm-4 col-md-3 col-lg-2">
                  <img src="{{this.photo.url}}" alt="staff pics" class="profile" />
                </div>
              {{else}}
                <div class="col-4 col-sm-4 col-md-3 col-lg-2">
                  <img src="/images/psylogo4.jpg" alt="staff pics" class="profile" />
                </div>
              {{/if}}
              <div class="col-5 col-sm-6 col-md-7 col-lg-8">
                <p><a href="/admin/staffprofile/{{this.id}}">{{this.name}}</a></p>
                <p>
                  <b><span class="fa fa-user"></span> </b>{{this.gender}}<br>
                </p>
              </div>
              {{#if this.disabled}}
                <div class="col-2">
                  <form action="/admin/enablestaff/{{this.id}}" method="POST">
                    <input type="hidden" />
                    <button type="submit" class="btn btn-danger"><span class="fa fa-minus-square-o"></span></button>
                  </form>
                </div>
              {{else}}
                <div class="col-2">
                  <form action="/admin/disablestaff/{{this.id}}" method="POST">
                    <input type="hidden" />
                    <button type="submit" class="btn btn-success"><span class="fa fa-check-square-o"></span></button>
                  </form>
                </div>
              {{/if}}
            </div>
          </li>
        {{else}}
          <p>THERE ARE NO REGISTERED PSYCHOLOGY STAFF</p>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<br><br>