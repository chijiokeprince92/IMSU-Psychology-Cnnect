<!DOCTYPE html>
<html lang="en-US">

<head>
    {{>head}}
</head>

<body>
    {{>admin_lecbody}}
    <br>
    <br>
    <h3>LIST OF NAPS STAFFS</h3>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-12">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-dark">
                            <tr>
                                <th>PICS</th>
                                <th>E-MAIL</th>
                                <th>SURNAME</th>
                                <th>FIRSTNAME</th>
                                <th>STAFF_ID</th>
                                <th>GENDER</th>
                                <th>PHONE NUMBER</th>
                                <th>PROFILE</th>
                            </tr>
                        </thead>
                        {{#each slow}}
                            <tr>
                                <td><img src="/{{this.photo}}" alt="profile image" class="rounded" height="40" /></td>
                                <td>{{this.email}}</td>
                                <td>{{this.surname}}</td>
                                <td>{{this.firstname}}</td>
                                <td>{{this.staff_id}}</td>
                                <td>{{this.gender}}</td>
                                <td>{{this.phone}}</td>
                                <td><a href="/staffprofile/{{this.id}}">View Profile</a></td>
                            </tr>
                            {{else}}
                                <p>THERE ARE NO REGISTERED STAFF</p>
                        {{/each}}
                    </table>
                </div>
            </nav>
        </div>
    </div>
    <br><br> {{>footer}}
</body>

</html>