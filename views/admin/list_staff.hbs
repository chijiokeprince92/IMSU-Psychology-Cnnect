<br>
<h5><b>
    PSYCHOLOGY LECTURERS
  </b></h5>
<br><br>
<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-md-9">
      <ul class="list-group list-group-flush">
        {{#each slow}}
          <li class="container-fluid list-group-item">
            <div class="row">
              {{#if this.photo.url}}
                <div class="col-3 col-sm-2">
                  <img src="{{this.photo.url}}" alt="staff pics" class="profile" />
                </div>
              {{else}}
                <div class="col-3 col-sm-2">
                  <img src="/images/psylogo4.jpg" alt="staff pics" class="profile" />
                </div>
              {{/if}}
              <div class="col-7 col-sm-7 col-md-8 col-lg-9">
                <p><a href="/admin/staffprofile/{{this.id}}">{{this.name}}</a></p>
                <p>
                  <b><span class="fa fa-user"></span> </b>{{this.gender}}<br>
                </p>
              </div>
              {{#if this.disabled}}
                <div class="col-2 col-sm-1">
                  <form action="/admin/enablestaff/{{this.id}}" method="POST">
                    <input type="hidden" />
                    <button type="submit" class="btn btn-primary btn-sm">Enable</button>
                  </form>
                </div>
              {{else}}
                <div class="col-2 col-sm-1">
                  <form action="/admin/disablestaff/{{this.id}}" method="POST">
                    <input type="hidden" />
                    <button type="submit" class="btn btn-success btn-sm">Disable</button>
                  </form>
                </div>
              {{/if}}
            </div>
          </li>
          <br><br>
        {{else}}
          <p>THERE ARE NO REGISTERED PSYCHOLOGY STAFF</p>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<br><br>