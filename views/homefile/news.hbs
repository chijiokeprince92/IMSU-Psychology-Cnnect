<br>
<h5><b>
    LATEST NEWS!!
  </b>
</h5>
<br>
<ul>
  <div class="container-fluid">
    <div class="row">
      {{#each newspaper}}
        <div class="col-12 col-sm-6 col-lg-4">
          <li class="card">
            <div class="col-12 card-header">
              <h5>
                <b>
                  <a href="/homegetfullnews/{{this.id}}">{{this.heading}}</a>
                </b>
              </h5>
            </div>
            <div class="card-body col-12">
              <img src="{{this.picture.url}}" alt="news image" class="rounded news" />
              <br><br>
              <p>{{truncate this.passage 130}}</p>
              <small class="float-right"> {{datey this.created}}</small>
            </div>
            <div class="col-12 card-footer">
              <span class="fa fa-comments-o" style="font-size:20px;color:rgb(15, 132, 241)"> </span>
              <span style="font-size:20px"> {{length this.comments}}</span>
              <span class="fa fa-heart-o float-right" style="font-size:20px;color:rgb(245, 56, 71)"> <span
                  id="spn{{this.id}}"> {{length this.likey}}</span> </span>
            </div>
          </li>
          <br><br>
        </div>
        <script>
          // function for live update when news is liked without page reload
          $('document').ready(function () {
            var socket = io();
            socket.on("{{this.id}}", function (msg) {
              $('#spn{{this.id}}').text(Number(msg) + 1);
            });
          });
        </script>
      {{else}}
        <p><b>THERE ARE NO UPLOADED NEWS</b></p>
      {{/each}}
      <br><br>
    </div>
  </div>
</ul>
<br><br>