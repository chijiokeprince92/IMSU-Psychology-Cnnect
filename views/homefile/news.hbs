<br>
<h5><b>
        LATEST NEWS!!
    </b>
</h5>
<br>
<ul>
    <div class="container-fluid">
        <div class="row">
            {{#each newspaper}}
                <div class="col-12 col-md-6 col-lg-4">
                    <li class="card">
                        <div class="col-12 card-header">
                            <h5>
                                <b>
                                    <a href="/homegetfullnews/{{this.id}}">{{this.heading}}</a>
                                </b>
                            </h5>
                        </div>
                        <div class="col-12">
                            <br>
                            <img src="{{this.picture}}" alt="image" class="rounded" width="100%" height="250" />
                        </div>
                        <br>
                        <div class="col-12 card-body">
                            <p>{{this.passage}}</p>
                        </div>
                        <div class="col-12 card-footer">
                            <button class="btn btn-danger"><span class="fa fa-commenting-o"></span>
                                {{length this.comments}}</button>
                            <button type="button" class="btn btn-primary"><span class="fa fa-thumbs-o-up"></span>
                                {{this.likes}}</button>
                            <button class="btn btn-danger"><span class="fa fa-thumbs-o-down"></span>
                                {{this.dislikes}}</button>
                        </div>
                    </li>
                    <br><br>
                </div>
            {{else}}
                <p><b>THERE ARE NO UPLOADED NEWS</b></p>
            {{/each}}
        </div>
    </div>
</ul>
<br><br>