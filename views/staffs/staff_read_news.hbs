<br>
<h5><b>
    LATEST NEWS!!
  </b>
</h5>
<br>
<ul>
  <div class="container-fluid">
    <div class="row">
      {{#each newspaper}}
        <div class="col-12 col-sm-6 col-lg-4">
          <li class="card">
            <div class="col-12 card-header">
              <h5>
                <b>
                  <a href="/staff/getfullnews/{{this.id}}">{{this.heading}}</a>
                </b>
              </h5>
            </div>
            <div class="card-body col-12">
              <img src="/{{this.picture}}" alt="news image" class="rounded news" />
              <br><br>
              <p>{{truncate this.passage 130}}</p>
            </div>
            <div class="col-12 card-footer">
              <button class="btn btn-light"><span class="fa fa-commenting-o" style="color:lightgreen"> </span>
                {{length this.comments}}</button>
              <button class="btn btn-light fa fa-thumbs-o-up" style="color:blue"></button>
              <span id="spn{{this.id}}">{{length this.likey}}</span>
              <button class="btn btn-light fa fa-thumbs-o-down" style="color:red"></button>
              <span id="dis{{this.id}}">{{length this.dislikey}}</span>
            </div>
          </li>
          <br><br>
        </div>
      {{else}}
        <p><b>THERE ARE NO UPLOADED NEWS</b></p>
      {{/each}}
      <br><br>
    </div>
  </div>
</ul>
<br><br>