<h5>
    <b>
        UPDATE PROFILE
    </b>
</h5>
<br><br>
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6" id="kilo">
            <form class="form group" action="" method="POST">
                <label for="email"><b>E-MAIL:</b></label>
                <input type="email" name="email" class="form-control" value="{{staff.email}}" placeholder="Email.com"
                    required>
                <br>
                <label for="surname"><b>SURNAME:</b></label>
                <input type="text" name="surname" class="form-control" value="{{staff.surname}}" placeholder="surname"
                    required>
                <br>
                <label for="firstname"><b>FIRST_NAME:</b></label>
                <input type="text" name="firstname" class="form-control" value="{{staff.firstname}}" placeholder="first name"
                    required>
                <br>
                <label for="phone"><b>PHONE NUMBER:</b></label>
                <input type="tel" name="phone" class="form-control" value="{{staff.phone}}" required>
                <br>
                <label for="bio"><b>ABOUT YOU:</b></label>
                <input type="text" class="form-control" name="bio" value="{{staff.bio}}" placeholder="About you"
                    required>
                <br>
                <label for="password"><b>PASSWORD:</b></label>
                <input type="password" class="form-control" name="password" value="{{staff.password}}" required>
                <br><br>
                <button type="submit" class="btn btn-success"><b><span class="fa fa-cloud-upload"></span> UPDATE
                        PROFILE</b></button>
            </form>
        </div>
    </div>
</div>
