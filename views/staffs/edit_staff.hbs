    <h3>
        <b><center>UPDATE PROFILE</center></b>
    </h3>
    <br><br>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-md-8 col-lg-6" id="kilo">
                <form class="form group input-group-lg" action="" method="POST">
                    <label for="email"><b>E-MAIL:</b></label>
                    <input type="email" name="email" class="form-control" value="{{coursey.email}}" placeholder="Email.com" required>
