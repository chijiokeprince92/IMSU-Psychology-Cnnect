<br>
{{#if message}}
  <p class="alert alert-success">{{message}}</p>
{{/if}}
<h5><b>{{staff.surname}} {{staff.firstname}} <button class="btn btn-success" style="border-radius:50%">R</button></b>
</h5>
<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-lg-4 viewer">
      {{#if staff.photo.url}}
        <img src="{{staff.photo.url}}" alt="profile image" class="rounded profileImage" />
      {{else}}
        <img src="/images/psylogo4.jpg" alt="profile image" class="rounded profileImage" />
      {{/if}}
      <form action="/staff/updatepics/{{staff.id}}" method="POST" enctype="multipart/form-data">
        <input type="file" id="filer" name="image" style="display:none" required>
        <button type="submit" id="submiter" class="btn btn-danger" style="display:none"><span
            class="fa fa-edit"></span></button>
      </form>
      <button id="cousin" class="btn btn-success" style="margin-top:-40px"><span class="fa fa-camera"></span></button>
      <br><br>
    </div>
  </div>
</div>
<script>
  $(document).ready(function () {
    $('#cousin').click(function () {
      $('#filer').click();
      $('#submiter').toggle('slow');
      $('#cousin').toggle('slow');
    });
  });
</script>
<br><br><br>
<div class="container-fluid">
  <div class="row">
    <div class="col-12 col-sm-10 col-md-7 col-lg-7">
      <ul class="nav nav-tabs nav-justified">
        <li class="nav-item">
          <a class="nav-link active" data-toggle="tab" href="#info">INFO</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#courses">COURSES</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" data-toggle="tab" href="#books">BOOKS</a>
        </li>
      </ul>
      <div class="tab-content">
        <div id="info" class="container-fluid tab-pane active" style="background-color:white">
          <br><br>
          <p><b><span class="fa fa-envelope"> </span></b> {{staff.email}}</p>
          <br>
          <p><b><span class="fa fa-lock"> </span> </b> {{staff.staff_id}}</p>
          <br>
          <p><b><span class="fa fa-user"> </span> </b>{{staff.gender}}</p>
          <br>
          <p><b><span class="fa fa-phone"> </span> </b> 0{{staff.phone}}</p>
          <br>
          <p><b><span class="fa fa-comment-o"> </span> </b>{{staff.bio}}</p>
          <br>
          <p><b><span class="fa fa-calendar"> </span> </b>Joined : {{datey staff.date}}.</p>
          <br>
          <p><b><span class="fa fa-calendar"> </span> </b>Last Updated : {{datey staff.updated}}.</p>
          <br>
        </div>
        <div id="courses" class="container-fluid tab-pane fade" style="background-color:white">
          <br><br>
          <h5>
            <b>COURSES HANDLED <span class="badge badge-danger badge-pill spany">{{length coursess}}</b>
          </h5>
          <br>
          <ul>
            {{#each coursess}}
              <li>
                <p><b>{{this.coursecode}}: </b><a href="/staff/viewcourse/{{this.id}}">{{this.coursetitle}}</a></p>
              </li>
              <br>
            {{else}}
              <p>NO COURSE ASSIGNED</p>
            {{/each}}
          </ul>
        </div>
        <div id="books" class="container-fluid tab-pane fade" style="background-color:white">
          <br><br>
          <p>** Books written by You is not available at the moment.Please check back later</p>
        </div>
      </div>
    </div>
    <div class="col-12 col-sm-10 col-md-5 col-lg-4">
      <br><br><br>
      <ul class="card">
        <li class="card-body">
          <h6 class="card-header font-weight-bold"> <a href="/staff/updateprofile/{{staff.id}}" title="books">EDIT</a>
            <span class="fa fa-edit" style="font-size:25px"></span></h6>
          <br>
          <p class="card-text">Click to edit your profile.</p>
        </li>
        <li class="card-body">
          <h6 class="card-header font-weight-bold"> <a href="/staff/stafflist" title="Colleagues">COLLEAGUES</a>
            <span class="fa fa-users" style="font-size:25px"></span>
          </h6>
          <br>
          <p class="card-text">Click to see other psychology lecturers.</p>
        </li>
      </ul>
    </div>
  </div>
</div>
<br><br>