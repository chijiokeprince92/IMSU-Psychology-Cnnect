<!doctype html>
<html>

<head>
    {{>head}}
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $('document').ready(function () {
            $(function () {
                var socket = io();
                $('form').submit(function () {
                    socket.emit('chat message', $('#m').val());
                    $('#m').val('');
                    return false;
                });
                socket.on('chat message', function (msg) {
                    $('.messages').append($('<li></li>').html(msg + '<br>'));

                });
            });
        });
    </script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px;
        }

        form {
            background: #000;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        #m {
            border: 0;
            padding: 10px;
            width: 100%;
            margin-right: .5%;
        }


        #messages {
            list-style-type: circle;
            margin: 0;
            padding: 0;
        }
    </style>
</head>

<body>
    <h2>{{{message}}}</h2>
    <br>
    <ul class="nav nav-pills nav-justified">
        <li class="nav-item" title="Homepage">
            <a href="/" class="btn btn-primary btn-block"><span class="glyphicon glyphicon-home"></span>Home</a>
        </li>
        <li class="nav-item" title="Your Profile">
            <a href="/studentss/{{allowed}}" class="btn btn-primary btn-block">Profile</a>
        </li>
        <li class="nav-item" title="Click to see upcoming events">
            <a href="/news" class="btn btn-primary btn-block">General Group Chat</a>
        </li>
        <li class="nav-item" title="Click to see upcoming events">
            <a href="/news" class="btn btn-primary btn-block">Contacts</a>
        </li>
    </ul>
    <ul class="messages"></ul>
    <form action="">
        <input type="text" id="m" name="m" placeholder="Type a message..." autocomplete="off" />
        <input type="submit" class="btn btn-primary btn-block" value="Send" />
    </form>
</body>

</html>