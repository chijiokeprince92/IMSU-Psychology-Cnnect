<br>
<h5><b>
        LATEST NEWS!!
    </b>
</h5>
{{#if message}}
    <p class="alert alert-success">{{message}}</p>
{{/if}}
<br>
<ul>
    <div class="container-fluid">
        <div class="row">
            {{#each newspaper}}
                <div class="col-12 col-sm-6 col-lg-4">
                    <li class="card">
                        <div class="col-12 card-header">
                            <h5>
                                <b>
                                    <a href="/studentgetfullnews/{{this.id}}">{{this.heading}}</a>
                                </b>
                            </h5>
                        </div>
                        <div class="card-body col-12">
                            <img src="/{{this.picture}}" alt="news image" class="rounded news" />
                            <br><br>
                            <p>{{this.passage}}</p>
                        </div>
                        <div class="col-12 card-footer">
                            <button class="btn btn-danger"><span class="fa fa-commenting-o"></span>
                                {{length this.comments}}</button>
                            <form id="newslike{{this.id}}" action="/newslike/{{this.id}}" method="POST"
                                style="display:inline">
                                <input type="text" style="display:none" id="newsId{{this.id}}" value="{{this.id}}" />
                                <input type="text" style="display:none" id="userId" value="{{../allowed.id}}" />
                                <button type="submit" class="btn btn-primary"><span class="fa fa-thumbs-o-up"></span>
                                    {{length this.likey}}</button>
                            </form>
                            <form id="newsdislike{{this.id}}" action="/newsdislike/{{this.id}}" method="POST"
                                style="display:inline">
                                <input type="text" style="display:none" id="newsId{{this.id}}" value="{{this.id}}" />
                                <input type="text" style="display:none" id="userId" value="{{../allowed.id}}" />
                                <button type="submit" class="btn btn-danger"><span class="fa fa-thumbs-o-down"></span>
                                    {{length this.dislikey}}</button>
                            </form>
                        </div>
                    </li>
                    <br><br>
                </div>
                <script>
                    $('document').ready(function () {
                        $(function () {
                            var socket = io();
                            $('#newslike{{this.id}}').submit(function (event) {
                                event.preventDefault();

                                var newsId = $('#newsId{{this.id}}').val();
                                var user = $('#userId').val();

                                $.post(
                                    '/newslike/' + newsId,
                                    {
                                        newsId: newsId,
                                        user: user,
                                    },
                                    function (response, err) {
                                        if (response) {
                                            console.log('success')
                                        } else {
                                            console.log(err, 'err')
                                        }
                                    });
                            });
                        });
                    });
                </script>
                <script>
                    $('document').ready(function () {
                        $(function () {
                            var socket = io();
                            $('#newsdislike{{this.id}}').submit(function (event) {
                                event.preventDefault();

                                var newsId = $('#newsId{{this.id}}').val();
                                var user = $('#userId').val();

                                $.post(
                                    '/newsdislike/' + newsId,
                                    {
                                        newsId: newsId,
                                        user: user,
                                    },
                                    function (response, err) {
                                        if (response) {
                                            console.log('success')
                                        } else {
                                            console.log(err, 'err')
                                        }
                                    });
                            });
                        });
                    });
                </script>
            {{else}}
                <p><b>THERE ARE NO UPLOADED NEWS</b></p>
            {{/each}}
            <br><br>
        </div>
    </div>
</ul>
<br><br>