<br>
<h5>
    <b>
        YOUR PROFILE.
    </b>
</h5>
<br>
{{#if message}}
    <p class="alert alert-success">{{message}}</p>
    <br>
{{/if}}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-sm-10 col-md-6 col-lg-5">
            <img src="/{{user.photo}}" alt="profile image" class="rounded" width="100%" />
            <br>
            <form id="drake" style="display:none" action="/studentupdatepics/{{user.id}}" method="POST"
                enctype="multipart/form-data" style="display:inline">
                <input type="file" class="form-control" name="image" placeholder="upload photo" required>
                <button type="submit" class="btn btn-success"><span class="fa fa-edit"></span></button>
            </form>
            <button id="cousin" class="btn btn-primary"><span class="fa fa-edit"></span></button>
            <button id="close" class="btn btn-danger" style="display:none">Close</button>
            <br><br>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#cousin').click(function () {
            $('#drake').toggle("slow");
            $('#cousin').toggle("slow");
            $('#close').toggle("slow");
        });
        $('#close').click(function () {
            $('#drake').toggle("slow");
            $('#cousin').toggle("slow");
            $('#close').toggle("slow");
        });
    });
</script>
<br><br>
<ul class="nav nav-tabs nav-justified">
    <li class="nav-item">
        <a class="nav-link active" data-toggle="tab" href="#home">INFO</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#info">COURSES</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#result">FRIENDS</a>
    </li>
</ul>
<div class="tab-content">
    <div id="home" class="container-fluid tab-pane active" style="background-color:white">
        <br><br>
        <p><b>SURNAME: </b> {{user.surname}}</p>
        <br>
        <p><b>FIRSTNAME: </b> {{user.firstname}}</p>
        <br>
        <p><b>MAT. NUMBER :</b> {{user.matnumber}}</p>
        <br>
        <p><b>LEVEL: </b>{{user.level}}</p>
        <br>
        <p><b>GENDER: </b>{{user.gender}}</p>
        <br>
        <p><b>E-MAIL:</b> {{user.email}}</p>
        <br>
        <p><b>IS_ COURSEREP:</b> {{user.is_courserep}}</p>
        <br>
        <p><b>PHONE NUMBER: </b>{{user.phone}}</p>
        <br>
        <p><b>STATUS: </b>{{user.bio}}</p>
        <br>
        <p><b>DATE REGISTERED: </b>{{user.date}}</p>
        <br>
    </div>
    <div id="info" class="container-fluid tab-pane fade" style="background-color:white">
        <br>
        <h5><b>
                COURSES OFFERED THIS SEMESTER <span
                    class="badge badge-danger badge-pill spany">{{length registered_courses}}</span>
            </b>
        </h5>
        <br><br>
        <div class="container-fluid">
            <div class="row">
                {{#each registered_courses}}
                    <div class="col-9 col-md-8 col-lg-11">
                        <p>{{this.coursecode}}: <a href="/studentviewcourse/{{this.id}}">{{this.coursetitle}}</a>
                        </p>
                    </div>
                    <div class="col-3 col-md-2 col-lg-1">
                        <form action="/deleteregisteredcourse/{{this.id}}" method="POST" style="display:inline">
                            <input type="hidden" />
                            <button type="submit" class="btn btn-danger btn-block"><span
                                    class="fa fa-trash"></span></button>
                        </form><br><br>
                    </div>
                {{else}}
                    <p>NO REGISTERED COURSE</p>
                {{/each}}
            </div>
        </div>
    </div>
    <div id="result" class="container-fluid tab-pane fade" style="background-color:white">
        <br>
        <h3>RESULT</h3>
        <p>This is the result tabs</p>
    </div>
</div>
<br>
<br>
<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <a href="/myfullresults/{{user.id}}" type="button" title="results" class="btn btn-primary btn-block"><span
                    class="fa fa-briefcase" style="font-size:25px"></span></a>
        </div>
        <div class="col-4">
            <a href="/studentupdateprofile/{{user.id}}" type="button" title="Edit profile"
                class="btn btn-success btn-block"><span class="fa fa-edit" style="font-size:25px"></span></a>
        </div>
        <div class="col-4">
            <a href="/studentstudentlist" type="button" title="Coursemates" class="btn btn-primary btn-block"><span
                    class="fa fa-users" style="font-size:25px"></span></a>
        </div>
    </div>
</div>
